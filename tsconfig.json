{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
	"lib": ["DOM", "ES2019"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
	"typeRoots": ["./node_modules/@types"]
  }
}
